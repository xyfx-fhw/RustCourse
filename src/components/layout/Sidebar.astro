---
import type { Chapter } from '@/types/course';
import { getCollection } from 'astro:content';
import { parseTabContent } from '@/lib/utils/tabParser';

interface Props {
  chapters: Chapter[];
  currentSlug?: string;
}

const { chapters, currentSlug } = Astro.props;

// è·å–æ‰€æœ‰è¯¾ç¨‹å¹¶è®¡ç®—tabä¿¡æ¯
const allCourses = await getCollection('courses');
const courseTabInfo: Record<string, { hasTabs: boolean; tabIds: string[] }> = {};
for (const course of allCourses) {
  const tabs = parseTabContent(course.body);
  courseTabInfo[course.slug] = {
    hasTabs: tabs !== null && tabs.length > 0,
    tabIds: tabs ? tabs.map(t => t.id) : [],
  };
}

const courseTabInfoJson = JSON.stringify(courseTabInfo);
---

<aside class="w-64 bg-white border-r border-gray-200 sticky top-16 h-[calc(100vh-4rem)] overflow-y-auto">
  <div class="p-4">
    <h2 class="text-lg font-bold text-gray-900 mb-4">ğŸ“š è¯¾ç¨‹ç›®å½•</h2>

    <nav class="space-y-2">
      {chapters.map((chapter, chapterIndex) => {
        // åˆ¤æ–­ç« èŠ‚æ˜¯å¦æœ‰æ´»åŠ¨çš„è¯¾ç¨‹æˆ–å°èŠ‚
        const hasActiveItem = chapter.lessons.some(lesson => {
          if (lesson.subsections.length > 0) {
            return lesson.subsections.some(sub => sub.metadata.slug === currentSlug);
          }
          return lesson.metadata?.slug === currentSlug;
        });

        return (
          <div class="space-y-1" data-chapter={chapter.id}>
            <!-- ç« èŠ‚æ ‡é¢˜ï¼ˆå¯æŠ˜å ï¼‰ -->
            <button
              class="chapter-toggle w-full px-3 py-2 text-sm font-semibold text-gray-700 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors flex items-center justify-between"
              data-chapter-id={chapter.id}
            >
              <span>ç¬¬ {chapterIndex + 1} ç« ï¼š{chapter.title}</span>
              <svg class="w-4 h-4 transform transition-transform chapter-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>

            <!-- è¯¾ç¨‹åˆ—è¡¨ï¼ˆå¯æŠ˜å ï¼‰ -->
            <ul class={`space-y-1 ml-2 chapter-content ${hasActiveItem ? '' : 'hidden'}`} data-chapter-content={chapter.id}>
              {chapter.lessons.map((lesson, lessonIndex) => {
                // åˆ¤æ–­æ˜¯å¦æœ‰å°èŠ‚
                const hasSubsections = lesson.subsections.length > 0;

                if (hasSubsections) {
                  // æœ‰å°èŠ‚ï¼šæ¸²æŸ“å¯æŠ˜å çš„è¯¾ç¨‹å’Œå°èŠ‚åˆ—è¡¨
                  const hasActiveSubsection = lesson.subsections.some(sub => sub.metadata.slug === currentSlug);
                  const isIndexActive = currentSlug === lesson.metadata?.slug;

                  return (
                    <li class="space-y-1">
                      <!-- è¯¾ç¨‹æ ‡é¢˜ï¼ˆå¯ç‚¹å‡»ä¸”å¯æŠ˜å ï¼‰ -->
                      <div class="flex items-stretch">
                        {lesson.metadata && (
                          <a
                            href={lesson.metadata.url}
                            class={`flex-1 px-3 py-2 text-sm font-medium rounded-l-lg transition-colors flex items-center ${
                              isIndexActive
                                ? 'bg-primary text-white'
                                : 'text-gray-700 hover:bg-gray-100'
                            }`}
                            data-lesson-slug={lesson.metadata.slug}
                          >
                            <span class="lesson-status text-lg mr-2 w-5 inline-block text-center">â¬œ</span>
                            <span>{chapterIndex + 1}.{lessonIndex + 1} {lesson.title}</span>
                          </a>
                        )}
                        {!lesson.metadata && (
                          <span class="flex-1 px-3 py-2 text-sm font-medium text-gray-700">
                            {chapterIndex + 1}.{lessonIndex + 1} {lesson.title}
                          </span>
                        )}
                        <button
                          class="lesson-toggle px-2 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-r-lg transition-colors"
                          data-lesson-id={`${chapter.id}-${lesson.id}`}
                        >
                          <svg class="w-3 h-3 transform transition-transform lesson-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                          </svg>
                        </button>
                      </div>

                      <!-- å°èŠ‚åˆ—è¡¨ -->
                      <ul class={`space-y-1 ml-4 lesson-content ${hasActiveSubsection ? '' : 'hidden'}`} data-lesson-content={`${chapter.id}-${lesson.id}`}>
                        {lesson.subsections.map((subsection, subsectionIndex) => {
                          const isActive = currentSlug === subsection.metadata.slug;
                          return (
                            <li>
                              <a
                                href={subsection.metadata.url}
                                class={`block px-3 py-2 text-sm rounded-lg transition-colors flex items-center ${
                                  isActive
                                    ? 'bg-primary text-white font-medium'
                                    : 'text-gray-600 hover:bg-gray-100'
                                }`}
                                data-lesson-slug={subsection.metadata.slug}
                              >
                                <span class="lesson-status text-lg mr-2 w-5 inline-block text-center">â¬œ</span>
                                <span>{chapterIndex + 1}.{lessonIndex + 1}.{subsectionIndex + 1} {subsection.metadata.title}</span>
                              </a>
                            </li>
                          );
                        })}
                      </ul>
                    </li>
                  );
                } else {
                  // æ²¡æœ‰å°èŠ‚ï¼šç›´æ¥æ¸²æŸ“è¯¾ç¨‹é“¾æ¥
                  const isActive = currentSlug === lesson.metadata?.slug;
                  return (
                    <li>
                      <a
                        href={lesson.metadata?.url}
                        class={`block px-3 py-2 text-sm rounded-lg transition-colors flex items-center ${
                          isActive
                            ? 'bg-primary text-white font-medium'
                            : 'text-gray-600 hover:bg-gray-100'
                        }`}
                        data-lesson-slug={lesson.metadata?.slug}
                      >
                        <span class="lesson-status text-lg mr-2">â¬œ</span>
                        <span>{chapterIndex + 1}.{lessonIndex + 1} {lesson.title}</span>
                      </a>
                    </li>
                  );
                }
              })}
            </ul>
          </div>
        );
      })}
    </nav>
  </div>
</aside>

<!-- ç§»åŠ¨ç«¯ä¾§è¾¹æ  (å¯æ»‘å‡º) -->
<style>
  @media (max-width: 768px) {
    aside {
      position: fixed;
      top: 64px; /* Header é«˜åº¦ */
      left: -100%;
      bottom: 0;
      transition: left 0.3s ease-in-out;
      z-index: 40;
      box-shadow: 2px 0 8px rgba(0, 0, 0, 0.1);
    }

    aside.open {
      left: 0;
    }
  }

  /* æŠ˜å çŠ¶æ€çš„å›¾æ ‡æ—‹è½¬ */
  .chapter-content.hidden ~ .chapter-toggle .chapter-icon,
  .chapter-toggle[data-collapsed="true"] .chapter-icon {
    transform: rotate(-90deg);
  }

  /* è¯¾ç¨‹çº§åˆ«æŠ˜å å›¾æ ‡æ—‹è½¬ */
  .lesson-content.hidden ~ .lesson-toggle .lesson-icon,
  .lesson-toggle[data-collapsed="true"] .lesson-icon {
    transform: rotate(-90deg);
  }
</style>

<script>
  // ç« èŠ‚æŠ˜å /å±•å¼€åŠŸèƒ½
  function initChapterToggle() {
    // ä» localStorage æ¢å¤æŠ˜å çŠ¶æ€
    const collapsedChapters = JSON.parse(localStorage.getItem('collapsedChapters') || '[]');

    collapsedChapters.forEach((chapterId: string) => {
      const content = document.querySelector(`[data-chapter-content="${chapterId}"]`);
      const button = document.querySelector(`[data-chapter-id="${chapterId}"]`);
      if (content) {
        content.classList.add('hidden');
      }
      if (button) {
        button.setAttribute('data-collapsed', 'true');
      }
    });

    // ç»‘å®šç‚¹å‡»äº‹ä»¶
    document.querySelectorAll('.chapter-toggle').forEach((button) => {
      button.addEventListener('click', (e) => {
        const chapterId = button.getAttribute('data-chapter-id');
        const content = document.querySelector(`[data-chapter-content="${chapterId}"]`);

        if (content) {
          const isHidden = content.classList.contains('hidden');
          content.classList.toggle('hidden');
          button.setAttribute('data-collapsed', isHidden ? 'false' : 'true');

          // ä¿å­˜çŠ¶æ€åˆ° localStorage
          const collapsedChapters = JSON.parse(localStorage.getItem('collapsedChapters') || '[]');
          if (isHidden) {
            // å±•å¼€ï¼Œä»åˆ—è¡¨ä¸­ç§»é™¤
            const index = collapsedChapters.indexOf(chapterId);
            if (index > -1) {
              collapsedChapters.splice(index, 1);
            }
          } else {
            // æŠ˜å ï¼Œæ·»åŠ åˆ°åˆ—è¡¨
            if (!collapsedChapters.includes(chapterId)) {
              collapsedChapters.push(chapterId);
            }
          }
          localStorage.setItem('collapsedChapters', JSON.stringify(collapsedChapters));
        }
      });
    });
  }

  // è¯¾ç¨‹çº§åˆ«æŠ˜å /å±•å¼€åŠŸèƒ½
  function initLessonToggle() {
    // ä» localStorage æ¢å¤æŠ˜å çŠ¶æ€
    const collapsedLessons = JSON.parse(localStorage.getItem('collapsedLessons') || '[]');

    collapsedLessons.forEach((lessonId: string) => {
      const content = document.querySelector(`[data-lesson-content="${lessonId}"]`);
      const button = document.querySelector(`[data-lesson-id="${lessonId}"]`);
      if (content) {
        content.classList.add('hidden');
      }
      if (button) {
        button.setAttribute('data-collapsed', 'true');
      }
    });

    // ç»‘å®šç‚¹å‡»äº‹ä»¶
    document.querySelectorAll('.lesson-toggle').forEach((button) => {
      button.addEventListener('click', (e) => {
        const lessonId = button.getAttribute('data-lesson-id');
        const content = document.querySelector(`[data-lesson-content="${lessonId}"]`);

        if (content) {
          const isHidden = content.classList.contains('hidden');
          content.classList.toggle('hidden');
          button.setAttribute('data-collapsed', isHidden ? 'false' : 'true');

          // ä¿å­˜çŠ¶æ€åˆ° localStorage
          const collapsedLessons = JSON.parse(localStorage.getItem('collapsedLessons') || '[]');
          if (isHidden) {
            // å±•å¼€ï¼Œä»åˆ—è¡¨ä¸­ç§»é™¤
            const index = collapsedLessons.indexOf(lessonId);
            if (index > -1) {
              collapsedLessons.splice(index, 1);
            }
          } else {
            // æŠ˜å ï¼Œæ·»åŠ åˆ°åˆ—è¡¨
            if (!collapsedLessons.includes(lessonId)) {
              collapsedLessons.push(lessonId);
            }
          }
          localStorage.setItem('collapsedLessons', JSON.stringify(collapsedLessons));
        }
      });
    });
  }

  // é¡µé¢åŠ è½½æ—¶åˆå§‹åŒ–
  initChapterToggle();
  initLessonToggle();
</script>

