---
import type { Chapter } from '@/types/course';

interface Props {
  chapters: Chapter[];
  currentSlug?: string;
}

const { chapters, currentSlug } = Astro.props;
---

<aside class="w-64 bg-white border-r border-gray-200 sticky top-16 h-[calc(100vh-4rem)] overflow-y-auto">
  <div class="p-4">
    <h2 class="text-lg font-bold text-gray-900 mb-4">ğŸ“š è¯¾ç¨‹ç›®å½•</h2>

    <nav class="space-y-2">
      {chapters.map((chapter) => {
        const hasActiveLesson = chapter.lessons.some(lesson => lesson.slug === currentSlug);
        return (
          <div class="space-y-1" data-chapter={chapter.id}>
            <!-- ç« èŠ‚æ ‡é¢˜ï¼ˆå¯æŠ˜å ï¼‰ -->
            <button
              class="chapter-toggle w-full px-3 py-2 text-sm font-semibold text-gray-700 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors flex items-center justify-between"
              data-chapter-id={chapter.id}
            >
              <span>{chapter.title}</span>
              <svg class="w-4 h-4 transform transition-transform chapter-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>

            <!-- è¯¾ç¨‹åˆ—è¡¨ï¼ˆå¯æŠ˜å ï¼‰ -->
            <ul class={`space-y-1 ml-2 chapter-content ${hasActiveLesson ? '' : 'hidden'}`} data-chapter-content={chapter.id}>
              {chapter.lessons.map((lesson) => {
                const isActive = currentSlug === lesson.slug;
                return (
                  <li>
                    <a
                      href={lesson.url}
                      class={`block px-3 py-2 text-sm rounded-lg transition-colors ${
                        isActive
                          ? 'bg-primary text-white font-medium'
                          : 'text-gray-600 hover:bg-gray-100'
                      }`}
                    >
                      {lesson.title}
                    </a>
                  </li>
                );
              })}
            </ul>
          </div>
        );
      })}
    </nav>
  </div>
</aside>

<!-- ç§»åŠ¨ç«¯ä¾§è¾¹æ  (å¯æ»‘å‡º) -->
<style>
  @media (max-width: 768px) {
    aside {
      position: fixed;
      top: 64px; /* Header é«˜åº¦ */
      left: -100%;
      bottom: 0;
      transition: left 0.3s ease-in-out;
      z-index: 40;
      box-shadow: 2px 0 8px rgba(0, 0, 0, 0.1);
    }

    aside.open {
      left: 0;
    }
  }

  /* æŠ˜å çŠ¶æ€çš„å›¾æ ‡æ—‹è½¬ */
  .chapter-content.hidden ~ .chapter-toggle .chapter-icon,
  .chapter-toggle[data-collapsed="true"] .chapter-icon {
    transform: rotate(-90deg);
  }
</style>

<script>
  // ç« èŠ‚æŠ˜å /å±•å¼€åŠŸèƒ½
  function initChapterToggle() {
    // ä» localStorage æ¢å¤æŠ˜å çŠ¶æ€
    const collapsedChapters = JSON.parse(localStorage.getItem('collapsedChapters') || '[]');

    collapsedChapters.forEach((chapterId: string) => {
      const content = document.querySelector(`[data-chapter-content="${chapterId}"]`);
      const button = document.querySelector(`[data-chapter-id="${chapterId}"]`);
      if (content) {
        content.classList.add('hidden');
      }
      if (button) {
        button.setAttribute('data-collapsed', 'true');
      }
    });

    // ç»‘å®šç‚¹å‡»äº‹ä»¶
    document.querySelectorAll('.chapter-toggle').forEach((button) => {
      button.addEventListener('click', (e) => {
        const chapterId = button.getAttribute('data-chapter-id');
        const content = document.querySelector(`[data-chapter-content="${chapterId}"]`);

        if (content) {
          const isHidden = content.classList.contains('hidden');
          content.classList.toggle('hidden');
          button.setAttribute('data-collapsed', isHidden ? 'false' : 'true');

          // ä¿å­˜çŠ¶æ€åˆ° localStorage
          const collapsedChapters = JSON.parse(localStorage.getItem('collapsedChapters') || '[]');
          if (isHidden) {
            // å±•å¼€ï¼Œä»åˆ—è¡¨ä¸­ç§»é™¤
            const index = collapsedChapters.indexOf(chapterId);
            if (index > -1) {
              collapsedChapters.splice(index, 1);
            }
          } else {
            // æŠ˜å ï¼Œæ·»åŠ åˆ°åˆ—è¡¨
            if (!collapsedChapters.includes(chapterId)) {
              collapsedChapters.push(chapterId);
            }
          }
          localStorage.setItem('collapsedChapters', JSON.stringify(collapsedChapters));
        }
      });
    });
  }

  // é¡µé¢åŠ è½½æ—¶åˆå§‹åŒ–
  initChapterToggle();
</script>
