---
import type { Chapter } from '@/types/course';
import { getCollection } from 'astro:content';
import { parseTabContent } from '@/lib/utils/tabParser';

interface Props {
  chapters: Chapter[];
  currentSlug?: string;
}

const { chapters, currentSlug } = Astro.props;

// è·å–æ‰€æœ‰è¯¾ç¨‹å¹¶è®¡ç®—tabä¿¡æ¯
const allCourses = await getCollection('courses');
const courseTabInfo: Record<string, { hasTabs: boolean; tabIds: string[] }> = {};
for (const course of allCourses) {
  const tabs = parseTabContent(course.body);
  courseTabInfo[course.slug] = {
    hasTabs: tabs !== null && tabs.length > 0,
    tabIds: tabs ? tabs.map(t => t.id) : [],
  };
}

const courseTabInfoJson = JSON.stringify(courseTabInfo);
---

<aside class="w-64 bg-white border-r border-gray-200 sticky top-16 h-[calc(100vh-4rem)] overflow-y-auto">
  <div class="p-4">
    <h2 class="text-lg font-bold text-gray-900 mb-4">ğŸ“š è¯¾ç¨‹ç›®å½•</h2>

    <nav class="space-y-2">
      {chapters.map((chapter) => {
        const hasActiveLesson = chapter.lessons.some(lesson => lesson.slug === currentSlug);
        return (
          <div class="space-y-1" data-chapter={chapter.id}>
            <!-- ç« èŠ‚æ ‡é¢˜ï¼ˆå¯æŠ˜å ï¼‰ -->
            <button
              class="chapter-toggle w-full px-3 py-2 text-sm font-semibold text-gray-700 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors flex items-center justify-between"
              data-chapter-id={chapter.id}
            >
              <span>{chapter.title}</span>
              <svg class="w-4 h-4 transform transition-transform chapter-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>

            <!-- è¯¾ç¨‹åˆ—è¡¨ï¼ˆå¯æŠ˜å ï¼‰ -->
            <ul class={`space-y-1 ml-2 chapter-content ${hasActiveLesson ? '' : 'hidden'}`} data-chapter-content={chapter.id}>
              {chapter.lessons.map((lesson) => {
                const isActive = currentSlug === lesson.slug;
                return (
                  <li>
                    <a
                      href={lesson.url}
                      class={`block px-3 py-2 text-sm rounded-lg transition-colors flex items-center justify-between ${
                        isActive
                          ? 'bg-primary text-white font-medium'
                          : 'text-gray-600 hover:bg-gray-100'
                      }`}
                      data-lesson-slug={lesson.slug}
                    >
                      <span>{lesson.title}</span>
                      <span class="lesson-status text-lg ml-2">â¬œ</span>
                    </a>
                  </li>
                );
              })}
            </ul>
          </div>
        );
      })}
    </nav>
  </div>
</aside>

<!-- ç§»åŠ¨ç«¯ä¾§è¾¹æ  (å¯æ»‘å‡º) -->
<style>
  @media (max-width: 768px) {
    aside {
      position: fixed;
      top: 64px; /* Header é«˜åº¦ */
      left: -100%;
      bottom: 0;
      transition: left 0.3s ease-in-out;
      z-index: 40;
      box-shadow: 2px 0 8px rgba(0, 0, 0, 0.1);
    }

    aside.open {
      left: 0;
    }
  }

  /* æŠ˜å çŠ¶æ€çš„å›¾æ ‡æ—‹è½¬ */
  .chapter-content.hidden ~ .chapter-toggle .chapter-icon,
  .chapter-toggle[data-collapsed="true"] .chapter-icon {
    transform: rotate(-90deg);
  }
</style>

<script>
  // ç« èŠ‚æŠ˜å /å±•å¼€åŠŸèƒ½
  function initChapterToggle() {
    // ä» localStorage æ¢å¤æŠ˜å çŠ¶æ€
    const collapsedChapters = JSON.parse(localStorage.getItem('collapsedChapters') || '[]');

    collapsedChapters.forEach((chapterId: string) => {
      const content = document.querySelector(`[data-chapter-content="${chapterId}"]`);
      const button = document.querySelector(`[data-chapter-id="${chapterId}"]`);
      if (content) {
        content.classList.add('hidden');
      }
      if (button) {
        button.setAttribute('data-collapsed', 'true');
      }
    });

    // ç»‘å®šç‚¹å‡»äº‹ä»¶
    document.querySelectorAll('.chapter-toggle').forEach((button) => {
      button.addEventListener('click', (e) => {
        const chapterId = button.getAttribute('data-chapter-id');
        const content = document.querySelector(`[data-chapter-content="${chapterId}"]`);

        if (content) {
          const isHidden = content.classList.contains('hidden');
          content.classList.toggle('hidden');
          button.setAttribute('data-collapsed', isHidden ? 'false' : 'true');

          // ä¿å­˜çŠ¶æ€åˆ° localStorage
          const collapsedChapters = JSON.parse(localStorage.getItem('collapsedChapters') || '[]');
          if (isHidden) {
            // å±•å¼€ï¼Œä»åˆ—è¡¨ä¸­ç§»é™¤
            const index = collapsedChapters.indexOf(chapterId);
            if (index > -1) {
              collapsedChapters.splice(index, 1);
            }
          } else {
            // æŠ˜å ï¼Œæ·»åŠ åˆ°åˆ—è¡¨
            if (!collapsedChapters.includes(chapterId)) {
              collapsedChapters.push(chapterId);
            }
          }
          localStorage.setItem('collapsedChapters', JSON.stringify(collapsedChapters));
        }
      });
    });
  }

  // é¡µé¢åŠ è½½æ—¶åˆå§‹åŒ–
  initChapterToggle();
</script>

<!-- è¯¾ç¨‹è¿›åº¦çŠ¶æ€æ›´æ–°è„šæœ¬ -->
<script define:vars={{ courseTabInfoJson }}>
  const courseTabInfo = JSON.parse(courseTabInfoJson);

  function updateSidebarStatus() {
    const completedLessons = JSON.parse(localStorage.getItem('completedLessons') || '[]');

    document.querySelectorAll('[data-lesson-slug]').forEach((element) => {
      const slug = element.getAttribute('data-lesson-slug');
      const statusIcon = element.querySelector('.lesson-status');

      if (statusIcon && slug) {
        const info = courseTabInfo[slug];
        let hasProgress = false;

        if (info && info.hasTabs) {
          // æœ‰ tab çš„è¯¾ç¨‹ï¼šæ£€æŸ¥ tab å®Œæˆæƒ…å†µ
          const tabProgress = localStorage.getItem(`tab-progress-${slug}`);
          const tabsCompleted = tabProgress ? JSON.parse(tabProgress).completedTabs || [] : [];

          if (tabsCompleted.length === info.tabIds.length && info.tabIds.length > 0) {
            statusIcon.textContent = 'âœ…'; // å…¨éƒ¨å®Œæˆ
            hasProgress = true;
          } else if (tabsCompleted.length > 0) {
            statusIcon.textContent = 'ğŸ”µ'; // éƒ¨åˆ†å®Œæˆ
            hasProgress = true;
          } else {
            statusIcon.textContent = ''; // æœªå¼€å§‹ï¼Œä¸æ˜¾ç¤º
            hasProgress = false;
          }
        } else {
          // æ²¡æœ‰ tab çš„è¯¾ç¨‹ï¼šæ£€æŸ¥è¯¾ç¨‹å®ŒæˆçŠ¶æ€
          if (completedLessons.includes(slug)) {
            statusIcon.textContent = 'âœ…';
            hasProgress = true;
          } else {
            statusIcon.textContent = ''; // æœªå¼€å§‹ï¼Œä¸æ˜¾ç¤º
            hasProgress = false;
          }
        }

        // æ§åˆ¶å›¾æ ‡çš„å¯è§æ€§
        if (hasProgress) {
          statusIcon.style.display = 'inline';
        } else {
          statusIcon.style.display = 'none';
        }
      }
    });
  }

  // é¡µé¢åŠ è½½æ—¶åˆå§‹åŒ–
  updateSidebarStatus();

  // ç›‘å¬è¿›åº¦æ›´æ–°äº‹ä»¶
  window.addEventListener('storage', updateSidebarStatus);
  window.addEventListener('progress-updated', updateSidebarStatus);
</script>
