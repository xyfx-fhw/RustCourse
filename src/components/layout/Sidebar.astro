<script define:vars={{ courseTabInfoJson }}>
  const courseTabInfo = JSON.parse(courseTabInfoJson);

  function updateSidebarStatus() {
    const completedLessons = JSON.parse(localStorage.getItem('completedLessons') || '[]');

    document.querySelectorAll('[data-lesson-slug]').forEach((element) => {
      const slug = element.getAttribute('data-lesson-slug');
      const statusIcon = element.querySelector('.lesson-status');

      if (statusIcon && slug) {
        const info = courseTabInfo[slug];
        let hasProgress = false;

        if (info && info.hasTabs) {
          // æœ‰ tab çš„è¯¾ç¨‹ï¼šåªæ£€æŸ¥ tab å®Œæˆæƒ…å†µï¼Œä¸æ£€æŸ¥ completedLessons
          const tabProgress = localStorage.getItem(`tab-progress-${slug}`);
          const tabsCompleted = tabProgress ? JSON.parse(tabProgress).completedTabs || [] : [];

          if (tabsCompleted.length === info.tabIds.length && info.tabIds.length > 0) {
            statusIcon.textContent = 'âœ…'; // å…¨éƒ¨ Tab å®Œæˆ
            hasProgress = true;
          } else if (tabsCompleted.length > 0) {
            statusIcon.textContent = 'ğŸ”µ'; // éƒ¨åˆ† Tab å®Œæˆ
            hasProgress = true;
          } else {
            statusIcon.textContent = ''; // æœªå¼€å§‹ï¼Œä¸æ˜¾ç¤º
            hasProgress = false;
          }
        } else {
          // æ²¡æœ‰ tab çš„è¯¾ç¨‹ï¼šæ£€æŸ¥è¯¾ç¨‹å®ŒæˆçŠ¶æ€
          const isCompleted = completedLessons.includes(slug);
          if (isCompleted) {
            statusIcon.textContent = 'âœ…';
            hasProgress = true;
          } else {
            statusIcon.textContent = ''; // æœªå¼€å§‹ï¼Œä¸æ˜¾ç¤º
            hasProgress = false;
          }
        }

        // å·²è¯»æ ‡è¯†å§‹ç»ˆå ç”¨ç©ºé—´ï¼Œä¸éœ€è¦æ§åˆ¶ display
        // åªéœ€è®¾ç½®å†…å®¹ä¸ºç©ºæˆ–æœ‰ emoji
      }
    });
  }

  // é¡µé¢åŠ è½½æ—¶åˆå§‹åŒ–
  updateSidebarStatus();

  // ç›‘å¬è¿›åº¦æ›´æ–°äº‹ä»¶
  window.addEventListener('storage', updateSidebarStatus);
  window.addEventListener('progress-updated', updateSidebarStatus);
</script>
